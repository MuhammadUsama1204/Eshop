<div class='container'>
  <%= form_for @order do |f| %>
    <div class="field">
      <%= f.label :user_id %>
      <%= f.text_field :user_id, readonly: true %>
      <%= f.label :cart_id %>
      <%= f.text_field :cart_id, readonly: true %>
    </div>

    <div class="field">
      <%= f.label :payment_method %>
      <%= f.text_field :payment_method %>
    </div>

    <div class="field">
      <%= f.label :billing_address %>
      <%= f.text_area :billing_address %>
    </div>

    <div class="field">
      <%= f.label :shipping_address %>
      <%= f.text_area :shipping_address %>
    </div>
    
    <div>
      <div class="actions"><%= f.submit "place Order", class: 'btn btn-primary' %></div><br>
      <Span><%= link_to 'Your cart', cart_path(@cart), class: 'btn btn-primary' %></span>
    </div>
  <% end %>
</div>
