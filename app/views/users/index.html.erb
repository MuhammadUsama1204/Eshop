<% if @users.empty? %>
  <h1>No Users</h1>
<% else %>
  <h1>Emails of all Users click to see more detail  </h1>

<table class="table table-striped">
  <thead>

    <tr>
      <td scope="col">Username</td>
      <td scope="col">Email</td>
    </tr>

  </thead>

  <tbody>

    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.username, user_path(user) %>
        </td>
        <td>
          <%= user.email %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>
<nav aria-label="...">
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <%= will_paginate @paginate_users %>
    </li>
  </ul>
</nav>
<% end %>
