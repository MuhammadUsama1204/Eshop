<% if @users.empty? %>
  <h1>No Users</h1>
<% else %>
  <h1>Emails of all Users click to see more detail  </h1>

<table class="table table-striped">
  <thead>

    <tr>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
    </tr>

  </thead>

  <tbody>

    <% @users.each do |user| %>
      <tr>
        <th>
          <%= link_to user.username, user_path(user) %>
        </th>
        <td>
          <%= user.email %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<% end %>
