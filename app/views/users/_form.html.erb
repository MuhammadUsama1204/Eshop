<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>
   <div >
    <%= render "role_form", user: @user %>
    <span class="mx-1"></span> 
	  <%= link_to "back", user_path(@user), class: 'btn btn-primary btn-md' %>
  </div>
<% end %>
