<h1>Product Details</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Product title</th>
      <th scope="col">Description</th>
      <th scope="col">quantity_in_stock</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>
        <%= @product.id %>
      </th>
      <th>
        <%= @product.title %>
      </th>
      <th>
        <%= @product.description %>
      </th>
      <th>
        <%= @product.quantity_in_stock %>
      </th>
      <th>
        <%= @product.price %>
      </th>
      <th>
        <%= link_to "Edit", edit_product_path %>
        <div style="display: inline-block;">
          <%= button_to "Destroy", product_path(@product), method: :delete, data: {
                turbo_confirm: "Are you sure?"
              } %>
        </div>
      </th>
    </tr>
  </tbody>
</table>

<% if @product.display_picture.attached? %>
  Product Image<br><%= image_tag @product.display_picture, width: 500, height: 350, class: "product-image" %>
<% else %>
  <p>No image available for this Product!</p>
<% end %>
