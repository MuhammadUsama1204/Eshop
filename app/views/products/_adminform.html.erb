<% if @products.empty? %>
  <h1>No Products</h1>
<% else %>
  <h1>Ids of all Products click to see more detail  </h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Product Id</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to product.id, product_path(product) %>
          </td>
          <td>
            <%= product.title %>
          </td>
          <td>
            <%= product.price %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
