<div class='container' style='max-width: 300px;'>
  <%= form_with model: product, class: 'form', id: 'multi-step-form' do |form| %>
    <div class="step" id="step-1">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      
      <button type="button" class="btn btn-primary" id="next-step-1">Next</button>
    </div>

    <div class="step" id="step-2" style="display: none;">
      <div class="form-group">
        <%= form.label :price, class: 'control-label' %>
        <%= form.text_field :price, class: 'form-control', min: 0 %>
      </div>
      <div class="form-group">
        <%= form.label :quantity_in_stock, class: 'control-label' %>
        <%= form.text_field :quantity_in_stock, class: 'form-control' %>
      </div>
      <button type="button" class="btn btn-primary" id="prev-step-2">Previous</button>
      <button type="button" class="btn btn-primary" id="next-step-2">Next</button>
    </div>

    <div class="step" id="step-3" style="display: none;">
      <div class="form-group">
          <%= form.label :description, class: 'control-label' %>
          <%= form.text_area :description, class: 'form-control', style: 'height: 100px;' %>
      </div>
      <div class="form-group">
        <%= form.label :display_picture, class: 'control-label' %><br>
        <span class="thumbnail-container">
          <img id="thumbnail-image" class="thumbnail-image" alt="choose image" style="width: 40px; height: 40px;">
        </span>
        <%= form.file_field :display_picture, class: 'form-control-file' %>
      </div>

      <button type="button" class="btn btn-primary" id="prev-step-3">Previous</button>
      <button type="submit" class="btn btn-primary" id="submit-button">Submit</button>
    </div>
  <% end %>
</div>
